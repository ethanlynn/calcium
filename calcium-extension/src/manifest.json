{
  "manifest_version": 3,
  "name": "Calcium",
  "description": "A shell for the web.",
  "version": "1.0",
  "icons": {},
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content-script.js"]
    }
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Period",
        "mac": "Command+Period"
      }
    }
  },
  "host_permissions": ["https://*/*"],
  "permissions": ["tabs", "scripting", "storage"]
}
